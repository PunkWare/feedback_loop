<% provide(:title, "My surveys") %>
<div class="row">
	<aside class="span4">
		<section>
			<h1>
				<%= gravatar_for @user %>
				<%= @user.name %>
			</h1>
		</section>
		
		<%= link_to "New survey", new_survey_path, class: "btn btn-large btn-primary" %>
	
	</aside>
	
	<div class="span8">
		<h1>My surveys</h1>
		<% if @user.surveys.any? %>
			<h3><%=  pluralize(@user.surveys.count, "survey")  %></h3>
			<p class="surveys">
				<span class="header_title">Title</span>
			</p>
	
			<ol class="surveys">
				<%= render @surveys %>
			</ol>
	
			<%= will_paginate @surveys %>
		<% end %>
	</div>
</div>