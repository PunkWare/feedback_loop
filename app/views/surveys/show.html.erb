<% provide(:title, "Manage questions") %>
<div class="row">
	<aside class="span4">
		<section>
			<h1>
				<%= gravatar_for current_user %>
				<%= current_user.name %>
			</h1>
		</section>
		
		<p>
			<%= link_to "New question", new_question_path, class: "btn btn-large btn-primary" %>
		</p>

		<p>
			<% if @survey.questions.count > 0 %>
				<%= link_to "Make survey available", edit_survey_path(@survey), class: "btn btn-large btn-primary", confirm: "Have you created all the questions for the survey ?" %>
			<% end %>
		</p>
	
	</aside>
	
	<div class="span8">
		<h1>Manage questions</h1>
		<h3>Questions for survey : <%= link_to @survey.title, user_surveys_path %> </h3>

		<% if @survey.questions.any? %>	
			<br />
			
			<ol class="questions">
				<%= render @questions %>
			</ol>
	
			<%= will_paginate @questions %>
		<% end %>
	</div>
</div>