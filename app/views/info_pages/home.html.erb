<% if !signed_in? %>
	<% provide(:title, 'Home') %>
	<div class="center hero-unit">
		<h1>Feedback Loop</h1>
		<br />
		<h2>
			Surveys for everyone. By everyone.
		</h2>
		
		<%= link_to "Sign up now!", signup_path, class: "btn btn-large btn-primary" %>
	</div>

	<%= link_to image_tag("rails.png", alt: "Rails") , 'http://rubyonrails.org/' %> Powered by Ruby on Rails
<% else %>
	<% provide(:title, 'All surveys') %>
	<div class="center hero-unit">
		<h1>Give Feedback!</h1>
	</div>
	<div class="row">
		<aside class="span4">
			<section>
				<h1>
					<%= gravatar_for @current_user %>
					<%= @current_user.name %>
				</h1>
			</section>
			<p><%= link_to "Manage my surveys", user_surveys_path, class: "btn btn-large btn-primary btn_width50" %></p>
			<p><%= link_to "Join private survey", root_path, class: "btn btn-large btn-primary btn_width50" %></p>
		</aside>
		
		<div class="span8">
			<% if @surveys.any? %>
				<h3><%=  pluralize(@surveys.count, "available survey")  %></h3>
				<p class="surveys">
					<span class="header_title">Title</span>
				</p>
		
				<ol class="surveys">
					<% @surveys.each do |survey| %>
						<li>
							<span><%= link_to survey.title, begin_survey_path(survey) %> </span>

							<br />
							
							<span class="timestamp">
								Created <%= time_ago_in_words(survey.created_at) %> ago by <%= survey.user.name %>.
							</span>
						</li>
					<% end %>
				</ol>
		
				<%= will_paginate @surveys %>
			<% end %>
		</div>
	</div>
<% end %>

