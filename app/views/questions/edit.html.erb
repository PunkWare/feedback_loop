<%= provide(:title, "Update question") %> 
<h1>Update question</h1>

<%= render 'shared/error_messages', object: @question %>

<div class="row">
	<div class="span6 offset3">
		<%= form_for(@question) do |f| %>   

			<%= render 'fields', f: f %>

			<%= f.submit "Save changes", class: "btn btn-large btn-primary" %>
		<% end %>
	</div>
</div>