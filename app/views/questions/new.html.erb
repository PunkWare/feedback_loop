<%= provide(:title, 'New question') %>
<h1>New question</h1>

<%= render 'shared/error_messages', object: @question %>

<div class="row">
	<div class="span6 offset3">
		<%= form_for(@question) do |f| %>
		
			<%= render 'fields', f: f %>

			<%= f.submit "Create question", :class => "btn btn-large btn-primary" %>
		<% end %>
	</div>
</div>